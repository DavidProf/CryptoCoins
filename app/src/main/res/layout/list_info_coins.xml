<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crypto_coin"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_view_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_name"
        android:layout_marginTop="20dp"
        android:text="@string/price"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_view_value_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_view_value_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_value_name"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:text="price"
        android:textSize="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_delete"
        android:layout_below="@id/text_view_price"
        android:text="@string/delete"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/button_delete"
        android:layout_marginTop="10dp"
        android:background="#000" />

</RelativeLayout>
